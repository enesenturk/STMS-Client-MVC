
<link rel="stylesheet" href="~/vendors/bootstrap-toastr/toastr.min.css" />
<script src="~/vendors/bootstrap-toastr/toastr.min.js"></script>

<script>

	function toastrSuccess(message) {

		toastr.success(message, "@Messages.Successful", { timeOut: 3000 });
	}

	function toastrError(message) {

		toastr.error(message, "@Messages.Error", { timeOut: 3000 });
	}

	function toastrWarning(message) {

		toastr.warning(message, "@Messages.Warning", { timeOut: 3000 });
	}

	function toastrInfo(message) {

		toastr.info(message, "@Messages.Info", { timeOut: 3000 });
	}

</script>