@model NS.STMS.MVC.Models.ComponentModels.HtmlElementCompenents.InputDropDownDivComponentModel

<style>
	.form-floating > .form-select {
		padding-top: 1.2rem;
		padding-bottom: 0rem;
		height: 45px;
		font-size: 14px;
	}

	.form-floating > label {
		padding: 0.75rem .6rem;
		font-size: 14px;
	}
</style>

<div class="col-lg-2 col-md-6 col-sm-12">

	<div class="form-floating">
		<select id="@Model.Id" class="form-select" onchange="@Model.OnChange" autocomplete="off"></select>
		<label for="@Model.Id">@Model._key</label>
		<p id="@Model.ErrorId" class="inputErrorDesc"></p>
	</div>

</div>

<script>

	//document ready
	$(function () {

		var options = @Html.Raw(Json.Serialize(Model.Options));

		var inputId = "@Model.Id";
		var value = "@Model._value";
		var disabled = "@Model.Disabled";
		var iconId = "@Model.Id-icon"

		setDropDownOptions(options, inputId);

		if (value === "" || value === 0 || value === "0" || value == null) {
			value = "null";
		}

		$('#' + inputId).val(value);

		if (disabled == "True") {
			$('#' + inputId).prop("disabled", true);
			$('#' + iconId).css("display", "none");

		}
	});

</script>
